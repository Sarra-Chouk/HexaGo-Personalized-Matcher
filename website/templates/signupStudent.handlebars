<style>
    .dropdown-menu {
        max-height: 250px;
        overflow-y: auto;
        padding: 10px;

    }

    .form-check {
        margin-bottom: 8px;
    }

    .form-label {
        display: block;
        text-align: left;
    }

    .alert {
        width: 500px;
    }
</style>

<body class="bg-light d-flex flex-column min-vh-100">
    <div class="bg-light min-vh-100 d-flex flex-row">
        <div class="container">
            <div class="row">
                <div class="col-lg-12" >
                    <div class="card mb-4 mt-4" style="min-width: 500px;">
                        <div class="card-body p-4">
                            <h1>Register</h1>
                            <p class="text-muted">Create your account</p>
                            {{#if message}}
                            <div class="alert text-center {{#ifEquals type 
                                'success'}}alert-success{{else}}alert-danger{{/ifEquals}}">
                                {{message}}
                            </div>
                            {{/if}}
                            <form action="/sign-up-student" method="POST" enctype="multipart/form-data">
                                <input type="hidden" name="csrfToken" value="{{csrfToken}}" />
                                <div class="mb-3">
                                    <label for="username" class="form-label left-align">Name</label>
                                    <input class="form-control" type="text" id="username" name="username"
                                        placeholder="Enter your full name" value="{{username}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label left-align">Email</label>
                                    <input class="form-control" type="text" id="email" name="email"
                                        placeholder="Enter your email" value="{{email}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label left-align">Password</label>

                                    <div class="input-group mb-4">

                                        <span class="input-group-text">
                                            <i class="bi bi-eye-slash" id="togglePassword"></i>
                                        </span>
                                        <input class="form-control" type="password" name="password"
                                            placeholder="Enter your password" id="password" required>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="confirmedPassword" class="form-label left-align">Confirm
                                        Password</label>

                                    <div class="input-group mb-4">
                                        <span class="input-group-text">
                                            <i class="bi bi-eye-slash" id="toggleConfirmedPassword"></i>
                                        </span>

                                        <input class="form-control" type="password" id="confirmedPassword"
                                            name="confirmedPassword" placeholder="Repeat your password" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="category" class="form-label left-align">Nationality</label>
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle w-100" type="button"
                                            id="dropdownMenuNationalities" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                            Select Nationality
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuNationalities">
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Palestinian" id="nationalityPalestinian"
                                                        name="nationality"><label class="form-radio-label"
                                                        for="nationalityPalestinian">Palestinian</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Sudanese" id="nationalitySudanese"
                                                        name="nationality"><label class="form-radio-label"
                                                        for="nationalitySudanese">Sudanese</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Syrian" id="nationalitySyrian"
                                                        name="nationality"><label class="form-radio-label"
                                                        for="nationalitySyrian">Syrian</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Afghani" id="nationalityAfghani"
                                                        name="nationality"><label class="form-radio-label"
                                                        for="nationalityAfghani">Afghani</label></div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="dropdownCountries" class="form-label left-align">Country of Residence</label>
                                    <select class="form-select" id="dropdownCountries" name="country" required>
                                        <option value="">Select a country</option>
                                        <option value="Qatar">Qatar</option>
                                        <option value="United States">United States</option>
                                        <option value="England">England</option>
                                        <option value="Turkey">Turkey</option>
                                        <option value="Canada">Canada</option>
                                        <option value="Germany">Germany</option>
                                    </select>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="dropdownCities" class="form-label left-align">City</label>
                                    <select class="form-select" id="dropdownCities" name="city" required>
                                        <option value="">Select a country first</option>
                                    </select>
                                </div>                                

                                <div class="mb-3">
                                    <label for="KnownLanguages" class="form-label left-align">Languages You Know</label>
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle w-100" type="button"
                                            id="dropdownMenuKnownLanguages" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                            Select Languages
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuKnownLanguages">
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="English" id="knownLanguageEnglish"
                                                        name="knownLanguages"><label class="form-check-label"
                                                        for="languageEnglishKnown">English</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Arabic" id="languageArabicKnown"
                                                        name="knownLanguages"><label class="form-check-label"
                                                        for="languageArabicKnown">Arabic</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Spanish" id="languageSpanishKnown"
                                                        name="knownLanguages"><label class="form-check-label"
                                                        for="languageSpanishKnown">Spanish</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="French" id="languageFrenchKnown"
                                                        name="knownLanguages"><label class="form-check-label"
                                                        for="languageFrenchKnown">French</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="German" id="languageGermanKnown"
                                                        name="knownLanguages"><label class="form-check-label"
                                                        for="languageGermanKnown">German</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Chinese" id="languageChineseKnown"
                                                        name="knownLanguages"><label class="form-check-label"
                                                        for="languageChineseKnown">Chinese</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Urdu" id="languageUrduKnown"
                                                        name="knownLanguages"><label class="form-check-label"
                                                        for="languageUrduKnown">Urdu</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Hindi" id="languageHindiKnown"
                                                        name="knownLanguages"><label class="form-check-label"
                                                        for="languageHindiKnown">Hindi</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Russian" id="languageRussianKnown"
                                                        name="knownLanguages"><label class="form-check-label"
                                                        for="languageRussianKnown">Russian</label></div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="needs" class="form-label left-align">Necessities and Requirements</label>
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle w-100" type="button"
                                            id="dropdownNeeds" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                            Select Needs
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownNeeds">
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="None" id="needNone"
                                                        name="needs"><label class="form-check-label"
                                                        for="needNoone">None</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="FinancialAid" id="needFinancialAid"
                                                        name="needs"><label class="form-check-label"
                                                        for="needFinancialAid">Financial Aid</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Accessibility" id="needAccessibility"
                                                        name="needs"><label class="form-check-label"
                                                        for="needAccessibility">Accessibility</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Counselling" id="needCounselling"
                                                        name="needs"><label class="form-check-label"
                                                        for="needCounselling">Counselling</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Accomodation" id="needAccomodation"
                                                        name="needs"><label class="form-check-label"
                                                        for="needAccomodation">Accomodation</label></div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="category" class="form-label left-align">Level of Education</label>
                                    <select class="form-select" id="category" name="category" required>
                                        <option value="">Select a Category</option>
                                        <option value="Undergraduate">Undergraduate</option>
                                        <option value="Masters">Graduate</option>
                                        <option value="Research">Research</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="studyField" class="form-label left-align">Field of Study *</label>
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle w-100" type="button"
                                            id="dropdownStudyField" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                            Select Field of Study
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownStudyField">
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="ComputerScience" id="fieldComputerScience"
                                                        name="field"><label class="form-check-label"
                                                        for="ComputerScience">Computer Science</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Media" id="fieldMedia"
                                                        name="field"><label class="form-check-label"
                                                        for="fieldMedia">Media</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Business" id="fieldBusiness"
                                                        name="field"><label class="form-check-label"
                                                        for="fieldBusiness">Business</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Chemistry" id="fieldChemistry"
                                                        name="field"><label class="form-check-label"
                                                        for="fieldChemistry">Chemistry</label></div>
                                            </li><li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Medicine" id="fieldMedicine"
                                                        name="field"><label class="form-check-label"
                                                        for="fieldMedicine">Medicine</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Engineering" id="fieldEngineering"
                                                        name="field"><label class="form-check-label"
                                                        for="fieldEngineering">Engineering</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Physics" id="fieldPhysics"
                                                        name="field"><label class="form-check-label"
                                                        for="fieldPhysics">Physics</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Law" id="fieldLaw"
                                                        name="field"><label class="form-check-label"
                                                        for="fieldLaw">Law</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Nursing" id="fieldNursing"
                                                        name="field"><label class="form-check-label"
                                                        for="fieldNursing">Nursing</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="radio"
                                                        value="Politics" id="fieldPolitics"
                                                        name="field"><label class="form-check-label"
                                                        for="fieldPolitics">Politics</label></div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="username" class="form-label left-align">GPA</label>
                                    <input class="form-control" type="text" id="gpa" name="gpa"
                                        placeholder="Enter your GPA (If applicable)" value="">
                                </div>

                                <button class="btn btn-success w-100" type="submit">Create Account</button>
                            </form>
                            <p class="text-center mt-3">Already have an account? <a href="/login"
                                    class="text-primary">Log in</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // City data mapped to countries
            const cityData = {
              Qatar: ["Doha", "Al Wakrah", "Duhail"],
              "United States": ["New York", "Los Angeles", "Chicago"],
              England: ["London", "Manchester", "Birmingham"],
              Turkey: ["Istanbul", "Ankara", "Izmir"],
              Canada: ["Toronto", "Vancouver", "Montreal"],
              Germany: ["Berlin", "Munich", "Hamburg"]
            };
        
            const countryDropdown = document.getElementById('dropdownCountries');
            const cityDropdown = document.getElementById('dropdownCities');
        
            // Event listener for when the user selects a country
            countryDropdown.addEventListener('change', () => {
              const selectedCountry = countryDropdown.value;
              cityDropdown.innerHTML = ''; // Clear previous city options
        
              if (selectedCountry && cityData[selectedCountry]) {
                cityData[selectedCountry].forEach(city => {
                  const option = document.createElement('option');
                  option.value = city;
                  option.textContent = city;
                  cityDropdown.appendChild(option);
                });
              } else {
                const defaultOption = document.createElement('option');
                defaultOption.value = '';
                defaultOption.textContent = 'Select a country first';
                cityDropdown.appendChild(defaultOption);
              }
            });
          });
      
        document.querySelectorAll('.input-group-text i').forEach(toggleIcon => {
          toggleIcon.addEventListener('click', () => {
            const passwordField = toggleIcon.closest('.input-group').querySelector('input');
            const isPassword = passwordField.getAttribute('type') === 'password';
            passwordField.setAttribute('type', isPassword ? 'text' : 'password');
            toggleIcon.classList.toggle('bi-eye');
            toggleIcon.classList.toggle('bi-eye-slash');
          });
        });
      </script>      
</body>