<style>
    .dropdown-menu {
        max-height: 250px;
        overflow-y: auto;
        padding: 10px;
    }

    .form-check {
        margin-bottom: 8px;
    }

    .form-label {
        display: block;
        text-align: left;
    }

    .alert {
        width: 500px;
    }

    .add-field-button {
        cursor: pointer;
        color: #007bff;
        margin-top: 10px;
    }

    .new-field-container {
        margin-top: 15px;
    }
</style>

<body class="bg-light d-flex flex-column min-vh-100">
    <div class="bg-light min-vh-100 d-flex flex-row">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card mb-4 mt-4" style="min-width: 500px;">
                        <div class="card-body p-4">
                            <h1>Register</h1>
                            <p class="text-muted">Create your account</p>
                            {{#if message}}
                            <div
                                class="alert text-center {{#ifEquals type 'success'}}alert-success{{else}}alert-danger{{/ifEquals}}">
                                {{message}}
                            </div>
                            {{/if}}
                            <form action="/sign-up-university" method="POST" enctype="multipart/form-data">
                                <input type="hidden" name="csrfToken" value="{{csrfToken}}" />
                                <div class="mb-3">
                                    <label for="username" class="form-label left-align">Name</label>
                                    <input class="form-control" type="text" id="username" name="username"
                                        placeholder="Enter your full name" value="{{username}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="email" class="form-label left-align">Email</label>
                                    <input class="form-control" type="text" id="email" name="email"
                                        placeholder="Enter your email" value="{{email}}" required>
                                </div>
                                <div class="mb-3">
                                    <label for="password" class="form-label left-align">Password</label>
                                    <div class="input-group mb-4">
                                        <span class="input-group-text">
                                            <i class="bi bi-eye-slash" id="togglePassword"></i>
                                        </span>
                                        <input class="form-control" type="password" name="password"
                                            placeholder="Enter your password" id="password" required>
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label for="confirmedPassword" class="form-label left-align">Confirm
                                        Password</label>
                                    <div class="input-group mb-4">
                                        <span class="input-group-text">
                                            <i class="bi bi-eye-slash" id="toggleConfirmedPassword"></i>
                                        </span>
                                        <input class="form-control" type="password" id="confirmedPassword"
                                            name="confirmedPassword" placeholder="Repeat your password" required>
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="dropdownCountries" class="form-label left-align">Country</label>
                                    <select class="form-select" id="dropdownCountries" name="country" required>
                                        <option value="">Select a country</option>
                                        <option value="Qatar">Qatar</option>
                                        <option value="United States">United States</option>
                                        <option value="England">England</option>
                                        <option value="Turkey">Turkey</option>
                                        <option value="Canada">Canada</option>
                                        <option value="Germany">Germany</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="dropdownCities" class="form-label left-align">City</label>
                                    <select class="form-select" id="dropdownCities" name="city" required>
                                        <option value="">Select a country first</option>
                                    </select>
                                </div>

                                <div class="mb-3">
                                    <label for="minGPA" class="form-label left-align">Minumum GPA Requirement *</label>
                                    <input class="form-control" type="text" id="minGPA" name="minGPA"
                                        placeholder="Enter GPA" required>
                                </div>

                                <div class="mb-3">
                                    <label for="services" class="form-label left-align">Aid Services Offered *</label>
                                    <div class="dropdown">
                                        <button class="btn btn-primary dropdown-toggle w-100" type="button"
                                            id="dropdownServices" data-bs-toggle="dropdown"
                                            aria-expanded="false">
                                            Select Services
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownServices">
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="None" id="serviceNone"
                                                        name="services"><label class="form-check-label"
                                                        for="serviceNone">None</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Scholarships" id="serviceScholarships"
                                                        name="services"><label class="form-check-label"
                                                        for="serviceScholarships">Scholarships</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="FinancialAid" id="serviceFinancialAid"
                                                        name="services"><label class="form-check-label"
                                                        for="serviceFinancialAid">Financial Aid</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Accessibility" id="serviceAccessibility"
                                                        name="services"><label class="form-check-label"
                                                        for="serviceAccessibility">Accessibility</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Counselling" id="serviceCounselling"
                                                        name="services"><label class="form-check-label"
                                                        for="serviceCounselling">Counselling</label></div>
                                            </li>
                                            <li>
                                                <div class="form-check"><input class="form-check-input" type="checkbox"
                                                        value="Accomodation" id="serviceAccomodation"
                                                        name="services"><label class="form-check-label"
                                                        for="serviceAccomodation">Accomodation</label></div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="mb-3" id="fieldsContainer">
                                    <!-- The first field group is static -->
                                    <div class="new-field-container">
                                        <div class="mb-3">
                                            <label class="form-label left-align">Offered Program</label>
                                            <div class="dropdown">
                                                <button class="btn btn-primary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown"
                                                    aria-expanded="false">
                                                    Select Program
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" value="Undergraduate"
                                                                id="programUndergraduate" name="program0">
                                                            <label class="form-check-label" for="programUndergraduate">Undergraduate</label>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" value="Masters" id="programMasters"
                                                                name="program0">
                                                            <label class="form-check-label" for="programMasters">Masters</label>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" value="Research" id="programResearch"
                                                                name="program0">
                                                            <label class="form-check-label" for="programResearch">Research</label>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>

                                        <div class="mb-3">
                                            <label class="form-label left-align">Available Fields</label>
                                            <div class="dropdown">
                                                <button class="btn btn-primary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    Select Field of Study
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" value="Art" id="fieldArt0" name="fields[0][field]" required>
                                                            <label class="form-check-label" for="fieldArt0">Art</label>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" value="Business" id="fieldBusiness0" name="fields[0][field]">
                                                            <label class="form-check-label" for="fieldBusiness0">Business</label>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" value="Chemistry" id="fieldChemistry0" name="fields[0][field]">
                                                            <label class="form-check-label" for="fieldChemistry0">Chemistry</label>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" value="ComputerScience" id="fieldComputerscience0" name="fields[0][field]">
                                                            <label class="form-check-label" for="fieldComputerscience0">Computer Science</label>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="radio" value="Education" id="fieldEducation0" name="fields[0][field]">
                                                            <label class="form-check-label" for="fieldEducation0">Education</label>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                        <div class="mb-3">
                                            <label class="form-label left-align">Language of Instruction</label>
                                            <div class="dropdown">
                                                <button class="btn btn-primary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                                    Select Languages
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" value="Arabic" id="instructionLanguageArabic0" name="fields[0][languages][]">
                                                            <label class="form-check-label" for="instructionLanguageArabic0">Arabic</label>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" value="English" id="instructionLanguageEnglish0" name="fields[0][languages][]">
                                                            <label class="form-check-label" for="instructionLanguageEnglish0">English</label>
                                                        </div>
                                                    </li>
                                                    <li>
                                                        <div class="form-check">
                                                            <input class="form-check-input" type="checkbox" value="French" id="instructionLanguageFrench0" name="fields[0][languages][]">
                                                            <label class="form-check-label" for="instructionLanguageFrench0">French</label>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>
                                    </div>
                                </div>                                
                                
                                <span class="add-field-button" id="addFieldButton">+ Add New Field</span>                                

                                <button class="btn btn-success w-100" type="submit">Create Account</button>
                            </form>
                            <p class="text-center mt-3">Already have an account? <a href="/login"
                                    class="text-primary">Log in</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // City data mapped to countries
            const cityData = {
              Qatar: ["Doha", "Al Wakrah", "Duhail"],
              "United States": ["New York", "Los Angeles", "Chicago"],
              England: ["London", "Manchester", "Birmingham"],
              Turkey: ["Istanbul", "Ankara", "Izmir"],
              Canada: ["Toronto", "Vancouver", "Montreal"],
              Germany: ["Berlin", "Munich", "Hamburg"]
            };
        
            const countryDropdown = document.getElementById('dropdownCountries');
            const cityDropdown = document.getElementById('dropdownCities');
        
            // Event listener for when the user selects a country
            countryDropdown.addEventListener('change', () => {
              const selectedCountry = countryDropdown.value;
              cityDropdown.innerHTML = ''; // Clear previous city options
        
              if (selectedCountry && cityData[selectedCountry]) {
                cityData[selectedCountry].forEach(city => {
                  const option = document.createElement('option');
                  option.value = city;
                  option.textContent = city;
                  cityDropdown.appendChild(option);
                });
              } else {
                const defaultOption = document.createElement('option');
                defaultOption.value = '';
                defaultOption.textContent = 'Select a country first';
                cityDropdown.appendChild(defaultOption);
              }
            });
          });

        document.addEventListener('DOMContentLoaded', () => {
            const addFieldButton = document.getElementById('addFieldButton');
            const fieldsContainer = document.getElementById('fieldsContainer');
            let fieldIndex = 1; // Keeps track of dynamically added field containers

            addFieldButton.addEventListener('click', () => {
                const newFieldContainer = document.createElement('div');
                newFieldContainer.classList.add('new-field-container', 'mb-3');

                // Add Program Selection
                newFieldContainer.innerHTML = `
                    <div class="mb-3">
                        <label class="form-label left-align">Offered Program</label>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Select Program
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" value="Undergraduate"
                                            id="programUndergraduate${fieldIndex}" name="program${fieldIndex}">
                                        <label class="form-check-label" for="programUndergraduate${fieldIndex}">Undergraduate</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" value="Masters"
                                            id="programMasters${fieldIndex}" name="program${fieldIndex}">
                                        <label class="form-check-label" for="programMasters${fieldIndex}">Masters</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" value="Research"
                                            id="programResearch${fieldIndex}" name="program${fieldIndex}">
                                        <label class="form-check-label" for="programResearch${fieldIndex}">Research</label>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                `;

                // Add Field of Study Selection
                newFieldContainer.innerHTML += `
                    <div class="mb-3">
                        <label class="form-label left-align">Available Fields</label>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Select Field of Study
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" value="Art" id="fieldArt${fieldIndex}" name="field${fieldIndex}">
                                        <label class="form-check-label" for="fieldArt${fieldIndex}">Art</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" value="Business" id="fieldBusiness${fieldIndex}" name="field${fieldIndex}">
                                        <label class="form-check-label" for="fieldBusiness${fieldIndex}">Business</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="radio" value="Chemistry" id="fieldChemistry${fieldIndex}" name="field${fieldIndex}">
                                        <label class="form-check-label" for="fieldChemistry${fieldIndex}">Chemistry</label>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                `;

                // Add Language Selection
                newFieldContainer.innerHTML += `
                    <div class="mb-3">
                        <label class="form-label left-align">Language of Instruction</label>
                        <div class="dropdown">
                            <button class="btn btn-primary dropdown-toggle w-100" type="button" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                Select Languages
                            </button>
                            <ul class="dropdown-menu">
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="Arabic" id="instructionLanguageArabic${fieldIndex}" name="languages${fieldIndex}">
                                        <label class="form-check-label" for="instructionLanguageArabic${fieldIndex}">Arabic</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="English" id="instructionLanguageEnglish${fieldIndex}" name="languages${fieldIndex}">
                                        <label class="form-check-label" for="instructionLanguageEnglish${fieldIndex}">English</label>
                                    </div>
                                </li>
                                <li>
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="French" id="instructionLanguageFrench${fieldIndex}" name="languages${fieldIndex}">
                                        <label class="form-check-label" for="instructionLanguageFrench${fieldIndex}">French</label>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                `;

                // Append the new field container
                fieldsContainer.appendChild(newFieldContainer);

                // Increment field index for unique IDs
                fieldIndex++;
            });
        });


        document.querySelectorAll('.input-group-text i').forEach(toggleIcon => {
            toggleIcon.addEventListener('click', () => {
                const passwordField = toggleIcon.closest('.input-group').querySelector('input');
                const isPassword = passwordField.getAttribute('type') === 'password';
                passwordField.setAttribute('type', isPassword ? 'text' : 'password');
                toggleIcon.classList.toggle('bi-eye');
                toggleIcon.classList.toggle('bi-eye-slash');
            });
        });
    </script>
</body>