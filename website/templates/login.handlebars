<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>

    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.3/font/bootstrap-icons.css" />
    <style>
        html,
        body {
            height: 100%;
            width: 100%;
            margin: 0;
            background: linear-gradient(135deg, rgb(69, 28, 113), rgb(19, 72, 163));
            font-family: 'Arial', sans-serif;
            display: flex;
            align-items: center;
            justify-content: center;
            overflow: auto;
        }

        .form-container {
            background-color: #fff;
            color: #333;
            padding: 2rem;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 900px;
            margin: 20px;
            margin-bottom: 80px; 
        }

        .form-wrapper {
            max-width: 800px;
            margin: 0 auto;
        }

        .form-title {
            text-align: center;
            margin-bottom: 1.5rem;
        }

        .btn-primary {
            background-color: #6a11cb;
            border: none;
        }

        .btn-primary:hover {
            background-color: #4d67ff;
        }

        .form-text a {
            color: #2575fc;
            text-decoration: none;
        }

        .input-group-text {
            cursor: pointer;
        }

        .alert {
            width: 100%;
            max-width: 300px;
            margin: 0 auto 1rem auto;
            text-align: center;
        }
    </style>
</head>

<body>
    <div class="form-container">
        <div class="form-wrapper">
            {{#if message}}
            <div class="alert {{#ifEquals type 'success'}}alert-success{{else}}alert-danger{{/ifEquals}}">
                {{message}}
            </div>
            {{/if}}
            <h2 class="form-title">Login</h2>
            <p class="text-center text-medium-emphasis">Sign In to your account</p>
            <form action="/login" method="POST">
                <!-- Email -->
                <div class="mb-4">
                    <label for="email" class="form-label">Email Address <span style="color: red;">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text">
                            <i class="bi bi-envelope"></i>
                        </span>
                        <input type="email" class="form-control" id="email" name="email" placeholder="Enter your email"
                            required />
                    </div>
                </div>

                <!-- Password -->
                <div class="mb-4">
                    <label for="password" class="form-label">Password <span style="color: red;">*</span></label>
                    <div class="input-group">
                        <span class="input-group-text" onclick="togglePassword()">
                            <i class="bi bi-eye-slash" id="togglePasswordIcon"></i>
                        </span>
                        <input type="password" class="form-control" id="password" name="password"
                            placeholder="Enter your password" required />
                    </div>
                </div>

                <!-- Login Button and Forgot Password Link -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <button type="submit" class="btn btn-primary">Login</button>
                    <a href="/reset-password" class="text-decoration-none">Forgot password?</a>
                </div>

                <!-- Signup Link -->
                <p class="text-center mt-3">
                    Donâ€™t have an account? <a href="/index" class="text-decoration-none">Register Now!</a>
                </p>
            </form>
        </div>
    </div>

    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const icon = document.getElementById('togglePasswordIcon');

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                icon.classList.remove('bi-eye-slash');
                icon.classList.add('bi-eye');
            } else {
                passwordInput.type = "password";
                icon.classList.remove('bi-eye');
                icon.classList.add('bi-eye-slash');
            }
        }
    </script>
</body>

</html>