<style>
    .body {
        height: 100%;
    }

    .sidebar-nav {
        height: 100%;
        background-color: #f8f9fa;
        padding-top: 20px;
    }

    .sidebar-nav .nav-item .nav-link {
        color: #495057;
        text-align: left;
        text-decoration: none;
        padding: 10px 20px;
        display: block;
        border-radius: 5px;
        width: 200px;
    }

    .sidebar-nav .nav-item .nav-link:hover {
        background-color: #efefef;
        color: #495057;
    }

    .sidebar-nav .nav-item .active {
        background-color: #545cf9;
        color: white;
    }

    .main-content {
        margin-left: 250px;
        flex: 1;
        align-items: center;
        justify-content: center;
    }

    .profile-container {
        width: 400px;
        background: white;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    .profile-username {
        font-size: 24px;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .profile-email {
        font-size: 16px;
        color: #555;
        margin-bottom: 20px;
    }

    .alert-container {
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100vh; 
    }

    .alert {
        max-width: 500px;
        text-align: center;
        padding: 20px;
        border-radius: 10px;
        font-size: 18px;
    }

    .badge {
        display: inline-block;
        padding: 5px 10px;
        border-radius: 10px;
        margin: 5px;
        font-size: 14px;
    }

    .badge.bg-info {
        background-color: #a2a7ff;
        color: #fff;
    }

    .badge.bg-success {
        background-color: #a2a7ff;
        color: #fff;
    }
</style>

<body>
    <ul class="sidebar-nav" data-coreui="navigation" data-simplebar="">
        <li class="nav-item"><a class="nav-link active" href="/profile"><i class="bi bi-person me-2"></i>Profile</a>
        </li>
        <li class="nav-item"><a class="nav-link" href="/myMatches"><i class="bi bi-speedometer2 me-2"></i>My Matches</a>
        </li>
    </ul>
    </div>
    <div class="main-content">
        {{#if isBlocked}}
        <div class="alert alert-danger text-center">
            {{message}}
        </div>
        {{else}}
        <div class="profile-container">
            <div class="profile-username">{{username}}</div>
            <div class="profile-email"><strong>Email:</strong> {{email}}</div>
            <div><strong>Nationality:</strong> {{nationality}}</div>
            <div><strong>Country:</strong> {{country}}</div>
            <div><strong>City:</strong> {{city}}</div>
            
            <div class="mt-3"><strong>Languages Known:</strong></div>
            <div>
                {{#if knownLanguages}}
                {{#each knownLanguages}}
                <span class="badge bg-info text-dark me-1">{{this}}</span>
                {{/each}}
                {{else}}
                <div>No languages specified.</div>
                {{/if}}
            </div>
            
            <div class="mt-3"><strong>Needs:</strong></div>
            <div>
                {{#if needs}}
                {{#each needs}}
                <span class="badge bg-success text-white me-1">{{this}}</span>
                {{/each}}
                {{else}}
                <div>No specific needs mentioned.</div>
                {{/if}}
            </div>

            <div class="mt-3"><strong>Study Field:</strong> {{studyField}}</div>
            <div><strong>Education Level:</strong> {{educationLevel}}</div>
            <div><strong>GPA:</strong> {{gpa}}</div>
        </div>
        {{/if}}
    </div>
</body>
